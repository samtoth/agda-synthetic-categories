{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve forest process (nix-shell)",
      "type": "shell",
      "command": "nix-shell --run 'make server'",
      "isBackground": true,
      "hide": true,
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "forester-watch",
          "pattern": [
            {
              "regexp": "^(___FORESTER_NO_PROBLEM___)$",
              "kind": "file",
              "file": 1,
              "message": 1
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": "^Serving forest on http://localhost:[0-9]+$"
          }
        }
      ]
    },
    {
      "label": "Serve forest (nix-shell)",
      "dependsOrder": "sequence",
      "dependsOn": ["Serve forest process (nix-shell)", "View forest"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "View forest",
      "type": "process",
      "command": "echo",
      "args": ["${input:openForesterSimpleBrowser}"],
      "problemMatcher": []
    },
    {
      "label": "Typecheck (nix-shell)",
      "type": "shell",
      "command": "nix-shell --run 'make typecheck'",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "nix-build",
      "type": "shell",
      "command": "nix-build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "openForesterSimpleBrowser",
      "type": "command",
      "command": "simpleBrowser.show",
      "args": "http://localhost:1313/agda-synthetic-categories/"
    }
  ]
}
