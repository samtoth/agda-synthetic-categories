      = (_≃_.bwd tofib (fmap.fwd) , eq' fmap.has-is-eqv) module tofibeq' where
      module fmap a = _≃_ (fmap a)

      from-fmap : (∀ b → fibre (A' .snd) b → fibre (B' .snd) (f b))
                → bundle-map f A' B'
      from-fmap = _≃_.bwd tofib

