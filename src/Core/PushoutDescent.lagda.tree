      opaque
        eq' : {f' : ∀ b → fibre (A' .snd) b → fibre (B' .snd) (f b)}
            → is-fibrewise-equiv f'
            → is-cartesian-bmap {f = f}{A'}{B'} (from-fmap f')
        eq' {f'} feq a = homotopy-is-equiv (lem f' a) (feq a)

