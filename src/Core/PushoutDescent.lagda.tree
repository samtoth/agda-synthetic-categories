      = Σ (bundle-map f _ (B' , pb)) (is-cartesian-bmap {f = f}{_}{B' , pb})
          ≃⟨ Σ-ap-≃-fst tofib ⟩
        (Σ[ f' ∶ (∀ b → fibre pa b → fibre pb (f b))] is-fibrewise-equiv f')
          ≃⟨ fibrewise-equiv≃  ⟩
        ((b : A) → fibre pa b ≃ fibre pb (f b)) ≃∎

    tofibeq' : ∀ {A B : Type 𝓤} {f : A → B} {A' : Bundle A} {B' : Bundle B}
