{
  // File nesting for agda auxiliary files
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.agda": "${capture}.agdai, ${capture}.agda~",
    "*.lagda": "${capture}.agdai, ${capture}.agda~",
    "*.lagda.md": "${capture}.agdai, ${capture}.agda~"
  },

  // Hide build artifacts explorer view
  "files.exclude": {
    "MAlonzo/": true,
    "**/MAlonzo/": true,
    "_build/": true,
    "_tmp/": true
  },
  "files.associations": {
    "codespellrc": "toml",
    ".codespellrc": "toml"
  },
  // Autoformatting
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.useEditorConfig": true,
  "editor.detectIndentation": false,
  "editor.rulers": [85],

  "editor.insertSpaces": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "[agda][forester][lagda-forester]": {
    "editor.detectIndentation": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": true
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "boundary"
  }
}
