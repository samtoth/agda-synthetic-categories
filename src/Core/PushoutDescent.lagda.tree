      ret : (a : bundle-map f _ (B' , pb)) → (from ∘ to) a ＝ a
      ret (f , H) = Σ-path→ (refl , (funext→ (λ a → ∙-reflr _ ∙ sym-sym)))

      sec : _
      sec f = funext→ (λ a → funext→ (λ where
        (a , refl) → Σ-path→ (refl , (∙-reflr _ ∙ sym-sym))))

