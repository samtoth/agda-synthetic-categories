                 (Σ[ B' ∶ Bundle B ] Σ (bundle-map g S' B') (is-cartesian-bmap {f = g}{S'}{B'}))))
    shuffle = mk≃ map (is-equiv←qiso map-qiso) where
      map : Cart Sp 𝓤 𝓤 𝓤 → _
      map (mk-cart
            (mk-span S' f' g')
            (mk-span-map h₁ h₂ h₃ H K)
