\tag{macro}

\export{basic-macros}
\export{agda-macros}

\xmlns:html{http://www.w3.org/1999/xhtml}

\def\citek[refid]{\let\escape[x]{\x}\<html:span>[class]{link-reference}{[\escape{[\refid]}](\refid)}}

\def\citet[tid][refid]{
\let\escape[x]{\x}\<html:span>[class]{link-reference}[tid]{\tid}[refid]{\refid}{[\escape{[\refid, \tid]}](\refid)}
}


\def\embed[src]{
  \<html:embed>[type]{text/html}[src]{\src}{}
}

\def\hidden[x]{}

\def\rm[x]{\textrm{\x}}
  
\def\tot[x]{{\startverb \~\stopverb{\x}}}

\def\refl{\textrm{refl}}

\def\bb1{\mathbb{1}}


\def\UU{\mathcal{U}}
\def\UV{\mathcal{V}}
\def\UW{\mathcal{W}}

\def\CC{\mathcal{C}}
\def\CD{\mathcal{D}}
\def\CE{\mathcal{E}}
\def\SS{#{\mathcal{S}}}

\def\fibre[f][a]{\textit{fib}_{\f}(\a)}

\def\op{\mathfrak{op}}

\def\id{\textit{id}}

\def\Hom{\textrm{Hom}}

\def\modflat[x]{\langle \flat | \x \rangle}
\def\mod{\textrm{mod}}

\def\toeq{\xrightarrow{\sim}}

\def\qed{#{\square}}

\def\remark[body]{
\scope{
  \put\transclude/toc{false}
\subtree{
  \taxon{Remark}
  \body
}
}
}

\def\todo[x]{
\scope{
   \put\transclude/toc{false}
\subtree{
   \taxon{Todo}
   \<html:p>[style]{color: red;}{\x}
}
}
}

\def\details[x]{
 \<html:details>{\x} 
}
